<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginFragment">

    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.dexcom.sdk.locationreminders.login.LoginFragment"
        android:label="@string/location_reminders"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_LoginFragment_to_MapsFragment"
            app:destination="@id/MapsFragment" />
    </fragment>

    <fragment
        android:id="@+id/MapsFragment"
        android:name="com.dexcom.sdk.locationreminders.maps.MapsFragment"
        android:label="@string/location_reminders"
        tools:layout="@layout/fragment_maps">

        <action
            android:id="@+id/action_MapsFragment_to_LoginFragment"
            app:destination="@id/LoginFragment" />
    </fragment>
</navigation>